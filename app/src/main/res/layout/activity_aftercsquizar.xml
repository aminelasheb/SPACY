<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/formequiz"
    tools:context=".aftercsquizar">

    <TextView
        android:id="@+id/textScreennn"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:textColor="#FFF"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="الملاحظة" />


    <ImageView
        android:id="@+id/bigboss"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:src="@drawable/astro2"
        android:layout_width="180dp"
        android:layout_height="180dp" />


    <TextView
        android:id="@+id/textQuestionnn"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:textColor="#FFF"
        android:textAlignment="center"
        android:textSize="28sp"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="جيد جدا! مستعدون للمواصلة؟" />

    <Button
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:id="@+id/textTitleee"
        android:textAllCaps="false"
        android:textColor="@color/purple_700"
        android:text="واصل"
        android:paddingBottom="10dp"
        android:textSize="28sp"
        android:background="@drawable/bgbtn"
        android:layout_width="280dp"
        android:layout_height="70dp" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/backalphaone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AlphabitFr">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:fontFamily="@font/baloo"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:text="Alphabets "
        android:textColor="#ffffff"/>

    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="330dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="110dp"
        android:layout_height="250dp"
        android:id="@+id/vp_horizontal2"
        android:orientation="horizontal" />

    <ImageView
        android:id="@+id/speakerafr"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/backkk"
        app:srcCompat="@drawable/astromusic" />

</LinearLayout>
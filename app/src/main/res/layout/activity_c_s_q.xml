<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/board"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CSQ">

    <androidx.cardview.widget.CardView
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        app:cardBackgroundColor="#2D2D2D"
        app:cardCornerRadius="70dp">

        <TextView
            android:id="@+id/alphaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:fontFamily="@font/baloo"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="23sp" />

    </androidx.cardview.widget.CardView>

    <HorizontalScrollView
        android:id="@+id/scrollView1"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_marginTop="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">
        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="270dp"
                android:layout_height="340dp"
                android:layout_marginStart="40dp"
                android:id="@+id/colors"
                android:layout_marginTop="20dp"
                android:background="@drawable/colorsquizcadr"
                android:layout_marginEnd="30dp">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="67dp"
                    android:layout_marginTop="249dp"
                    android:fontFamily="@font/baloo"
                    android:layout_centerHorizontal="true"
                    android:text="COLORS"
                    android:id="@+id/colors2"
                    android:textColor="@color/white"
                    android:textSize="30sp"/>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="270dp"
                android:layout_height="340dp"
                android:layout_marginTop="20dp"
                android:id="@+id/shape"
                android:background="@drawable/shapequizcadr"
                >



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="67dp"
                    android:layout_marginTop="249dp"
                    android:fontFamily="@font/baloo"
                    android:text="SHAPES"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/shapes"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

            </RelativeLayout>



            <ImageView
                android:layout_width="70dp"
                android:layout_height="340dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/shapecard2" />
        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:layout_width="335dp"
        android:layout_height="265dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/poo2"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="-33dp"
        android:layout_marginBottom="46dp"
        android:src="@drawable/poo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:id="@+id/quizz2"
        android:layout_alignParentStart="true"

        android:layout_alignParentBottom="true"
        android:layout_marginStart="234dp"
        android:layout_marginBottom="237dp"
        android:fontFamily="@font/baloo"
        android:text="Quiz"
        android:textColor="@color/black"
        android:textSize="35sp" />




</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/backlogin2"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".signup">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:paddingLeft="30dp"
        android:paddingRight="10dp">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:id="@+id/sig"
            android:fontFamily="@font/baloo"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:layout_marginTop="47dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fill up the informations below and click sign up."
            android:fontFamily="@font/baloo"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_below="@id/sig"/>



    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/username"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"

            android:textColorHint="#7EFFFFFF"
            app:boxCornerRadiusBottomEnd="23dp"
            app:boxCornerRadiusBottomStart="23dp"
            app:boxCornerRadiusTopEnd="23dp"
            app:boxCornerRadiusTopStart="23dp"
            app:boxStrokeColor="@color/ros"
            app:endIconMode="clear_text"
            app:endIconTint="@color/white"
            app:hintTextColor="@color/ros"
            app:startIconDrawable="@drawable/ic_action_person"
            app:startIconTint="#7DFFFFFF">

            <com.google.android.material.textfield.TextInputEditText
                android:hint="Enter Username"
                android:id="@+id/ediusername"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:inputType="textEmailAddress"
                android:textColor="@color/white"
                android:textCursorDrawable="@null" />
        </com.google.android.material.textfield.TextInputLayout>


        ///////////////////////////////////////////////////


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emaillayout2"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/username"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColorHint="#7DFFFFFF"
            app:boxCornerRadiusBottomEnd="23dp"
            app:boxCornerRadiusBottomStart="23dp"
            app:boxCornerRadiusTopEnd="23dp"
            app:boxCornerRadiusTopStart="23dp"
            app:boxStrokeColor="@color/ros"
            app:endIconMode="clear_text"
            app:endIconTint="@color/white"
            app:hintTextColor="@color/ros"
            app:startIconDrawable="@drawable/ic_action_email2"
            app:startIconTint="#7DFFFFFF">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editemaillayout2"
                android:background="@null"
                android:hint="Enter Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:inputType="textEmailAddress"
                android:textColor="@color/white"
                android:textCursorDrawable="@null" />
        </com.google.android.material.textfield.TextInputLayout>

//////////////////////////////////////////////////////////////

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password2"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/emaillayout2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColorHint="#7DFFFFFF"
            app:boxCornerRadiusBottomEnd="23dp"
            app:boxCornerRadiusBottomStart="23dp"
            app:boxCornerRadiusTopEnd="23dp"
            app:boxCornerRadiusTopStart="23dp"
            app:boxStrokeColor="@color/ros"
            app:endIconMode="clear_text"
            app:endIconTint="@color/white"
            app:hintTextColor="@color/ros"
            app:startIconDrawable="@drawable/ic_action_name"
            app:startIconTint="#7DFFFFFF">

            <com.google.android.material.textfield.TextInputEditText
                android:hint="Enter Password"
                android:background="@null"
                android:id="@+id/editpasswor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:textCursorDrawable="@null" />
        </com.google.android.material.textfield.TextInputLayout>



        <Button
            android:id="@+id/sign3"
            android:layout_width="210dp"
            android:layout_height="55dp"
            android:layout_below="@+id/password2"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="47dp"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/baloo"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:backgroundTint="#2F32C5" />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/or"
            android:layout_marginRight="30dp"
            android:src="@drawable/ligne"
            android:layout_below="@id/sign3"
            android:layout_marginTop="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or"
            android:textSize="18sp"
            android:fontFamily="@font/baloo"
            android:textColor="#2F32C5"
            android:id="@+id/or"
            android:layout_below="@id/sign3"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ligne"
            android:layout_below="@id/sign3"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:layout_alignLeft="@id/or" />
        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/or">
            <ImageView
                android:id="@+id/google"
                android:layout_width="54dp"
                android:layout_marginStart="3dp"
                android:layout_height="54dp"
                android:src="@drawable/google" />

            <ImageView
                android:layout_width="49dp"
                android:layout_height="49dp"

                android:layout_alignParentEnd="true"


                android:layout_marginBottom="0dp"
                android:src="@drawable/fb" />
        </RelativeLayout>




    </RelativeLayout>

</LinearLayout>
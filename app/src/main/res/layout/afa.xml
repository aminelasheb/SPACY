<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/learn"
    android:orientation="vertical"
    tools:context=".AFA"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:layout_width="301dp"
        android:layout_height="142dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        app:srcCompat="@drawable/astrolang2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp"
        android:fontFamily="@font/baloo"
        android:gravity="center"
        android:id="@+id/txt"
        android:text="  Bonjour\n apprenez avec nous"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:ignore="InvalidId" />

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="310dp"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/ar"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:background="#FFFFFF"
            android:foreground="?selectableItemBackground"
            app:cardBackgroundColor="#2D2D2D"
            app:cardCornerRadius="40dp"
            >
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
         android:orientation="horizontal"
            android:gravity="center">



                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="120dp"
                    android:src="@drawable/appar"
                    android:layout_height="120dp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/baloo"
                    android:text="   العربية   "
                    android:textColor="@color/white"
                    android:textSize="20sp" />


            </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/ang"
        android:layout_gravity="center"

        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:background="#FFFFFF"
        android:foreground="?selectableItemBackground"
        app:cardBackgroundColor="#2D2D2D"
        app:cardCornerRadius="40dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" android:orientation="horizontal"
            android:gravity="center">


            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/appan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/baloo"
                android:text="English"
                android:textColor="@color/white"
                android:textSize="20sp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/fr"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:background="#FFFFFF"
        android:foreground="?selectableItemBackground"
        app:cardBackgroundColor="#2D2D2D"
        app:cardCornerRadius="40dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" android:orientation="horizontal"
            android:gravity="center">



            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="120dp"
                android:src="@drawable/appfr"
                android:layout_height="120dp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Français"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/baloo"
                android:textColor="@color/white"
                android:textSize="20sp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>
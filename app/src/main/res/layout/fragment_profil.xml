<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/board"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".settingsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:layout_marginTop="17dp"
        android:textColor="#fff"
        android:text="SPACY"
        android:layout_marginLeft="120dp"
        android:fontFamily="@font/baloo"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backArrow"
        tools:ignore="UnknownId"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/usercircle"
            />
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="120dp"
            android:src="@drawable/plus"
            />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="210dp"
        android:src="@drawable/line"
        />



    <TextView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Your Profil"
        android:textColor="#000000"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="280dp"
        android:fontFamily="@font/baloo"
        android:background="@drawable/edit"
        />

    <LinearLayout
        android:layout_marginTop="340dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:id="@id/fullnameprofil"
            android:layout_marginBottom="10dp"
            android:textColorHint="#FF4CC1"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="///"
                android:id="@+id/fullnamefield"
                android:layout_marginTop="20dp"
                android:textColor="#ffff"
                android:textColorHint="#fff"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="UserName"
            android:id="@+id/Usernameprofil"
            android:layout_marginBottom="10dp"
            android:textColorHint="#FF4CC1"

            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="///"
                android:id="@+id/usernamefieled"
                android:layout_marginTop="20dp"
                android:textColor="#ffff"

                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:id="@+id/emailprofil"
            android:layout_marginBottom="10dp"
            android:textColorHint="#FF4CC1"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="///"
                android:id="@+id/emailfieled"
                android:layout_marginTop="20dp"
                android:textColor="#ffff"
                android:textColorHint="#fff"
                />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>


    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="570dp"
        android:layout_marginLeft="60dp"
        android:src="@drawable/astrmi"
        />







</RelativeLayout>